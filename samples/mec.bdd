display #tempo [a] := a ;$--- Ensemble des transitions du premier automatedisplay #Trans1 [qs:2, t:2, qd:2] := ({qs=0} & {t=0} & {qd=1}) | ({qs=1} & {t=1} & {qd=2}) | ({qs=qd} & {t=3}) ;$--- Ensemble des transitions du second automate#Trans2 [qs:2, u:2, qd:2] := #Trans1 [qs, u, qd] ;$---- Vecteur de synchronisationdisplay #vecteurSynchro [t:2, u:2] :=         ({t=3} & {u=0}) | ({t=0} & {u=0}) | ({t=1} & {u=1}) |         ({t=0} & {u=3}) | ({t=1} & {u=3})  ;$------------------ Produit des deux automates ------------------------display #Trans [qs:4, tu:4, qd:4] := #vecteurSynchro [tu:2::0, tu:2::2] & #Trans1 [qs:2::0, tu:2::0, qd:2::0] &  #Trans2 [qs:2::2, tu:2::2, qd:2::2] ;end