$ Fonctions arithmetiques$dimension N:5;$--- Ensemble des (x, y) tels que y = x + 1#DIFF1[x:N, y:N] := ?u:N ({x<u} & {u<=y} & !v:N (({x<v} & {v<=y})-> {u=v})) ;$--------------$ L' ADDITION$ definition d'un additionneur complet 1 bit#add1[A0:1,B0:1,R0:1,S0:1,R1:1] :=    ( ((A0<>B0)<>R0) = S0) & ( (((A0<>B0) & R0) | (A0&B0)) = R1) ;#add2[A:2,B:2,R0:1,S:2,R2:1] :=   ?R1:1 (#add1[A:1::0,B:1::0,R0,S:1::0,R1] & #add1[A:1::1,B:1::1,R1,S:1::1,R2]);  #add4[A:4,B:4,R0:1,S:4,R2:1] :=   ?R1:1 (#add2[A:2::0,B:2::0,R0,S:2::0,R1] & #add2[A:2::2,B:2::2,R1,S:2::2,R2]);    $#somme[A:N,B:N,S:N,R2:1] :=   $   ?R1:1 (?R0:1({R0=0} & #add4[A:4::0,B:4::0,R0,S:4::0,R1]) & #add4[A:4::4,B:4::4,R1,S:4::4,R2]);#somme[A:N,B:N,S:N,R2:1] :=    ?R1:1 (?R0:1({R0=0} & #add4[A:4::0,B:4::0,R0,S:4::0,R1]) & #add1[A:1::4,B:1::4,R1,S:1::4,R2]);end